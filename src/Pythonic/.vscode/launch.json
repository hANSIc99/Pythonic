        {
            "name": "Pythonic Verbose",
            "type": "python",
            "request": "launch",
            "args": ["-v"],
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Debugpy",
            "type": "python",
            "request": "attach",
            "connect" : {
                "host" : "localhost",
                "port"  : 5678
